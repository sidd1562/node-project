<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home page</title>
  </head>
  <body>
    <h1 style="text-align: center">URL Shortener http://localhost:5000/url/</h1>
    <% if (locals.id) { %>
    <p style="display: flex; justify-content: center; align-items: center">
      URL Generated: http://localhost:5000/url/<%=id %>
    </p>
    <% } %>
    <div>
      <form method="POST" action="/url">
        <label
          style="display: flex; justify-content: center; align-items: center">
          Enter Your Original URL
        </label>
        <br />
        <div
          style="display: flex; justify-content: center; align-items: center">
          <input type="text" name="url" placeholder="Enter Your URL" />
          <button type="submit">Generated</button>
        </div>
      </form>
    </div>

    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>NO</th>
          <th>ShortID</th>
          <th>Redirect</th>
          <th>Click</th>
        </thead>
        <tbody>
          <% urls.forEach((url,index) => { %>
          <tr>
            <td><%= index + 1 %></td>

            <td><%= url.shortId %></td>

            <td><%= url.redirectURL %></td>

            <td><%= url.visitHistory.length %></td>
          </tr>

          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
